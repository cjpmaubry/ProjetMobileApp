<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.entrepot1.AddActivity"
    >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_type"
        android:inputType="text"
        android:hint="enter the type"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_quantity"
        android:inputType="number"
        android:hint="enter the quantity"
        android:layout_below="@id/add_type"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_warehouse_name"
        android:inputType="text"
        android:hint="enter the warehouse's name"
        android:layout_below="@id/add_quantity"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_submit"
        android:text="Submit"
        android:layout_below="@id/add_warehouse_name"
        android:layout_marginLeft="30dp"/>



</RelativeLayout>